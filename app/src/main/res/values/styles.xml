<resources>

    <!--Global app Styles-->
    <style name="MaterialDrawerTheme.Light.DarkToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryL</item>
        <item name="colorPrimaryDark">@color/colorPrimaryL23</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textButtonColor">@color/white</item>
        <item name="android:colorControlHighlight">@color/grey800</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="icon">@color/grey600</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="collapsingToolbarBackground">@color/colorPrimaryL</item>
        <item name="android:windowBackground">@color/light_silver</item>
        <item name="cardsBackground">@style/CardView.LightStyle</item>
        <item name="backdropColor">@color/white</item>
        <item name="fontFamily">@font/google_sans</item>
        <item name="android:editTextBackground">@drawable/edit_text_background</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MaterialDrawerTheme.TranslucentStatusBlack" parent="Theme.AppCompat.NoActionBar">
        <item name="icon">@color/colorPrimaryL</item>
        <item name="colorPrimary">@color/grey900</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBlack</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="android:textColorPrimaryInverseNoDisable">@color/colorAccentDark</item>
        <item name="textButtonColor">@color/black</item>
        <item name="buttonTint">@color/colorAccentDark</item>
        <item name="cardBackgroundColor">@color/card_bg_dark</item>
        <item name="popup">@style/AppTheme.PopupOverlayDark</item>
        <item name="toolbar">@style/AppTheme.AppBarOverlayDark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="collapsingToolbarBackground">@color/about_toolbar_background</item>
        <item name="android:windowBackground">@color/darkWindowBackground</item>
        <item name="cardsBackground">@style/CardView.DarkStyle</item>
        <item name="fontFamily">@font/google_sans</item>
        <item name="android:editTextBackground">@drawable/edit_text_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="backdropColor">@color/grey900</item>
    </style>
    <color name="colorPrimaryL23">#eeeeee</color>

    <style name="AppTheme.AppBarOverlayDark" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlayDark" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="PaletteLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/light_silver</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>


    <color name="colorPrimaryL">#fff</color>
    <color name="colorPrimaryBlack">#151515</color>

    <style name="CardView.DarkStyle" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/grey800</item>
        <item name="android:layout_marginLeft">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="CardView.LightStyle" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">1dp</item>
    </style>
</resources>
